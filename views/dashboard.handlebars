
<div class="row">
  <div class="newbrew" style="width: 40rem;">
    <div class="card-body">
      <h3 class="card-title">Add a New Brewery:</h3>
      <form class="form new-brewery-form">
        <div class="form-group">
          <label for="brewery-name">Brewery name:</label>
          <input class="form-input" type="text" id="brewery-name" name="brewery-name" />
        </div>
        <div class="form-group">
          <label for="brewery-location">Brewery location:</label>
          <input class="form-input" type="text" id="brewery-location" name="brewery-location" placeholder="City" />
        </div>
        <div class="form-group">
          <label for="brewery-desc">What did you think about this brewery?</label>
          <textarea class="form-control" id="brewery-desc" name="brewery-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-dark">Add</button>
        </div>
      </form>
    </div>
  </div>

  {{#if posts.length}}
  <div class="card">
    <div class="post-list">
      <div class="card-body">
        <h3 class="card-title">Added Breweries:</h3>
        {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/post/{{post.id}}-1">{{post.title}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" id = "delete-button" delete-data-id="{{post.id}}">DELETE</button>
            {{!-- <button class="btn btn-sm btn-danger" id = "update-button" update-data-id="{{post.id}}">EDIT</button> --}}
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>

</div>
</div>
<script src="/js/post.js"></script>